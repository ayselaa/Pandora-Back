@model List<Banner>
﻿
@{
    ViewData["Title"] = "Index";
}

<section class="pandora-container">
    <div class="container">
        <div class="row">
            <div class="pandora-banner-div">
                <h3 class="pandora-banner-title">Banner</h3>
                <button class="addnewb"><a asp-action="Create" asp-controller="Banner">Add new</a></button>
            </div>
            <div style="margin-top:3rem;">
                <div class="container-p">
                    <div class="row">
                        <div class="col-12">
                            @if (Model.Count() > 0)
                            {
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th scope="col">Image</th>
                                            <th class="text-center" style="width:10rem;" scope="col">Language</th>
                                            <th class="text-center" style="width:10rem;" scope="col">Links</th>
                                            <th class="text-center" style="width:10rem;" scope="col">Status</th>
                                            <th class="text-center" style="width:10rem;" scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var banner in Model)
                                        {
                                            @foreach (var translate in banner.BannerTranslates)
                                            {
                                                <tr data-id="@banner.Id" class="slider-row">
                                                    <td><img style="width:27%" class="table-img" src="~/bannergallery/@translate.Image" /></td>
                                                    <td class="text-center">@translate.LangCode</td>
                                                    <td class="text-center">@translate.Links</td>
                                                    <td data-id="@banner.Id" class="status-cell text-center">
                                                        @if (banner.SoftDelete)
                                                        {
                                                            <div class="deActive-status banner-status" style="margin: 0 auto;"></div>
                                                        }
                                                        else
                                                        {
                                                            <div class="active-status banner-status" style="margin: 0 auto;"></div>
                                                        }


                                                    </td>
                                                    <td class="p-buttons text-center">
                                                        <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@banner.Id">Detail</a>
                                                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@banner.Id">Edit</a>
                                                       @* <form style="display: inline-block;" asp-action="Delete" asp-route-id="@banner.Id" method="post">
                                                            <button type="submit" class="btn btn-outline-danger">Delete</button>
                                                        </form>*@
                                                          <a class="delete-banner" data-id="@banner.Id" data-toggle="tooltip" data-original-title="Remove" style="cursor: pointer;">
                                                            <i class="fa-solid fa-trash" style="color: #c81921;" onmouseover="this.style.color='#ff0000';" onmouseout="this.style.color='#c81921';"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




<head>
    <link rel="stylesheet" href="~/admin/css/main.css">
</head>
