@{
    string currentController = ViewBag.CurrentController as string ?? "";
    string currentAction = ViewBag.CurrentAction as string ?? "";
    Console.WriteLine(currentController);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/admin/css/styles.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Pandora Admin Panel</title>
</head>
<body id="body-pd" class="body-pd">
    <header class="header body-pd" id="header">
        <div class="header_toggle">
            <i class="bx bx-menu bx-x" id="header-toggle"></i>
        </div>
    </header>
    <div class="l-navbar show" id="nav-bar">
        <nav class="nav">
            <div>
                <a href="#" class="nav_logo">
                    <img src="/admin/img/logo-pandora.png" alt="">
                </a>
                <div class="nav_list">
                    <a class="nav-link colorblack @(currentController == "Dashboard" && currentAction == "Index" ? "active" : "")" asp-action="Index" asp-controller="Dashboard">
                        <i class="bx bx-grid-alt nav_icon"></i>
                        <span class="nav_name">Dashboard</span>
                    </a>
                    <a class="nav-link colorblack @(currentController == "Banner" && currentAction == "Index" ? "active" : "")" asp-action="Index" asp-controller="Banner">
                        <i class="fa-regular fa-bookmark"></i>
                        <span class="nav_name">Banner</span>
                    </a>
                    <a class="nav-link colorblack @(currentController == "Slider" && currentAction == "Index" ? "active" : "")" asp-action="Index" asp-controller="Slider">
                        <i class="fa-solid fa-sliders"></i>
                        <span class="nav_name">Slider</span>
                    </a>
                    <a class="nav-link colorblack @(currentController == "BannerGift" && currentAction == "Index" ? "active" : "")" asp-action="Index" asp-controller="BannerGift">
                        <i class="fa-solid fa-gift"></i>
                        <span class="nav_name">BannerGift</span>
                    </a>
                    <a class="nav-link colorblack @(currentController == "Blog" && currentAction == "Index" ? "active" : "")" asp-action="Index" asp-controller="Blog">
                        <i class="fa-solid fa-blog"></i>
                        <span class="nav_name">Blog</span>
                    </a>
                    <a class="nav-link colorblack @(currentController == "FooterMenu" && currentAction == "Index" ? "active" : "")" asp-action="Index" asp-controller="FooterMenu">
                        <i class="fa-solid fa-bars"></i>
                        <span class="nav_name">FooterMenu</span>
                    </a>
                    <a class="nav-link colorblack @(currentController == "FooterMenuItem" && currentAction == "Index" ? "active" : "")" asp-action="Index" asp-controller="FooterMenuItem">
                        <i class="bx bx-bar-chart-alt-2 nav_icon"></i>
                        <span class="nav_name">FooterMenuItem</span>
                    </a>
                    <a class="nav-link colorblack @(currentController == "SliderDiscovery" && currentAction == "Index" ? "active" : "")" asp-action="Index" asp-controller="SliderDiscovery">
                        <i class="fa-solid fa-spinner"></i>                    <span class="nav_name">SliderDiscovery</span>
                    </a>
                    <a class="nav-link colorblack @(currentController == "SliderDiscoveryVideo" && currentAction == "Index" ? "active" : "")" asp-action="Index" asp-controller="SliderDiscoveryVideo">
                        <i class="fa-solid fa-film"></i>
                        <span class="nav_name">SliderVideo</span>
                    </a>
                </div>
            </div>
            <a href="#" class="nav_link colorblack">
                <i class="bx bx-log-out nav_icon"></i>
                <span class="nav_name">SignOut</span>
            </a>
        </nav>
    </div>
    <!--Container Main start-->
    <!--Container Main end-->
    @RenderBody()
    <script src="~/admin/js/script.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/admin/js/admin.js"></script>
    <script src="~/admin/js/footer.js"></script>
    <script src="~/admin/js/slider.js"></script>
    <script src="~/admin/js/banner.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
