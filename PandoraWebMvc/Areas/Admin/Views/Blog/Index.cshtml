@model List<Blog>
@{
    ViewData["Title"] = "Index";
}

<section class="pandora-container">
    <div class="container">
        <div class="row">
            <div class="pandora-banner-div">
                <h3 class="pandora-banner-title">Blog</h3>
                <button class="addnewb"><a asp-action="Create" asp-controller="Blog">Add new</a></button>
            </div>
            <div style="margin-top:3rem;">
                <div class="container-p">
                    <div class="row">
                        <div class="col-12">
                            @if (Model.Count() > 0)
                            {
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th scope="col">Image</th>
                                            <th class="text-center" scope="col">Language</th>
                                            <th class="text-center" scope="col">Tittle</th>
                                            <th class="text-center" scope="col">Description</th>
                                            <th class="text-center" scope="col">Links</th>
                                            <th class="text-center" scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var blog in Model)
                                        {
                                            foreach (var translate in blog.BlogTranslates)
                                            {
                                                <tr data-id="@blog.Id" class="slider-row">
                                                    <td><img style="width:27%" class="table-img" src="~/bloggallery/@blog.Image" /></td>
                                                    <td class="text-center">@translate.LangCode</td>
                                                    <td class="text-center">@translate.Tittle</td>
                                                    <td class="text-center">@translate.ShortDescription</td>
                                                    <td class="text-center">@translate.Links</td>
                                                    <td class="p-buttons" class="text-center">
                                                        <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@blog.Id">Detail</a>
                                                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@blog.Id">Edit</a>
                                                       @* <form style="display: inline-block;" asp-action="Delete" asp-route-id="@blog.Id" method="post">
                                                            <button type="submit" class="btn btn-outline-danger">Delete</button>
                                                        </form>*@

                                                         <a class="delete-blog" data-id="@blog.Id" data-toggle="tooltip" data-original-title="Remove" style="cursor: pointer;">
                                                            <i class="fa-solid fa-trash" style="color: #c81921;" onmouseover="this.style.color='#ff0000';" onmouseout="this.style.color='#c81921';"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
