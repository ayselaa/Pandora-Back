@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<section class="pandora-container">
    <div class="container">
        <div class="row">
            <div class="pandora-banner-div">
                <h3 class="pandora-banner-title">Slider</h3>
                <button class="addnewb"><a asp-action="Create" asp-controller="Slider">Add new</a></button>
            </div>
            <div style="margin-top:3rem;">
                <div class="container-p">
                    <div class="row">
                        <div class="col-12">
                            @if (Model.Count() > 0)
                            {
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th scope="col">Image</th>
                                            <th class="text-center" style="width:10rem;" scope="col">Language</th>
                                            <th class="text-center" style="width:10rem;" scope="col">Tittle</th>
                                            <th class="text-center" style="width:10rem;" scope="col">Description</th>
                                            <th class="text-center" style="width:10rem;" scope="col">Links</th>
                                            <th scope="col" class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var slider in Model)
                                        {
                                            @*foreach (var translate in slider.SlidersTranslates.Where(t=>t.LangCode=="az"))*@
                                            foreach (var translate in slider.SlidersTranslates)
                                            {
                                                <tr data-id="@slider.Id" class="slider-row">
                                                    <td><img style="width:27%" class="table-img" src="~/slidergallery/@slider.Image" /></td>
                                                    <td class="text-center">@translate.LangCode</td>
                                                    <td class="text-center">@translate.Tittle</td>
                                                    <td class="text-center">@translate.Description</td>
                                                    <td class="text-center">@translate.Links</td>
                                                    <td class="p-buttons text-center">
                                                        <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@slider.Id">Detail</a>
                                                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@slider.Id">Edit</a>
                                                        @*<form style="display: inline-block;" asp-action="Delete" asp-route-id="@slider.Id" method="post">
                                            <button type="submit" class="btn btn-outline-danger">Delete</button>
                                            </form>*@


                                                        <a class="delete-slider" data-id="@slider.Id" data-toggle="tooltip" data-original-title="Remove" style="cursor: pointer;">
                                                            <i class="fa-solid fa-trash" style="color: #c81921;" onmouseover="this.style.color='#ff0000';" onmouseout="this.style.color='#c81921';"></i>
                                                        </a>

                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
