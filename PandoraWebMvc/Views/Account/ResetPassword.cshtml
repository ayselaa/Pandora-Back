@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="login-register-area section-space-y-axis-100" style="margin-top: 15rem;">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="text-danger mb-2" asp-validation-summary="All"></div>
                <form method="post" asp-controller="Account" asp-action="ResetPassword">
                    <div class="login-form" style="position:relative;left:300px">
                        <h4 class="login-title text-center">Forgot Password</h4>
                        <div class="row">
                            <div class="col-lg-12" style="justify-content: center; align-items: center;display: flex;flex-direction: column;">
                                <div style="border: 1px solid black; width: 70%;height: 45px; ">
                                    <div class="setup__box-group"
                                         style="display: flex;
                    justify-content: center;
                     align-items: center;
                     justify-content: space-between;
                     user-select: none;
                ">
                                        <input asp-for="Password"
                                               type="password"
                                               class="password-input setup__box-input"
                                               style="
                      padding-left: 20px;
                      outline: none;
                      padding-left: 9px;
                      display: flex;
                      align-items: center;
                      padding-top: 0.7rem;
                      box-shadow: none;
                      user-select: none;
                      height: 100%;
                     "
                                               placeholder="Şifrə"
                                               id="pass2" />
                                      
                                        <label class="payBasketleftSide__placholder" for="pass">
                                            Şifrə
                                        </label>
                                        <span class="material-symbols-outlined visibility" style="margin-right: 1rem; margin-top: 9px;  cursor: default; user-select: none; color: gray;">
                                            <i class="fa-solid fa-eye"></i>
                                        </span>
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>
                                </div>
                                <div style="border: 1px solid black; margin-top: 1rem;width: 70%; height: 45px;">
                                    <div class="setup__box-group"
                                         style="display: flex;
                                           justify-content: center;
                                           align-items: center;
                                           justify-content: space-between;
                                           user-select: none;
                                             ">
                                        <input asp-for="ConfirmPassword"
                                               type="password"
                                               class="password-input setup__box-input"
                                               style="
                      padding-left: 20px;
                      outline: none;
                      padding-left: 9px;
                      display: flex;
                      align-items: center;
                      padding-top: 0.7rem;
                      box-shadow: none;
                      user-select: none;
                      height: 100%;
                     "
                                               placeholder="Təsdiq Şifrə"
                                               id="pass3" />
                                        <label class="payBasketleftSide__placholder" for="pass">
                                            Təsdiq şifrə
                                        </label>
                                        <span class="material-symbols-outlined visibility" style="margin-right: 1rem; margin-top: 9px;  cursor: default; user-select: none; color: gray;">
                                            <i class="fa-solid fa-eye"></i>
                                        </span>
                                         <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 pt-5" style="text-align: center;">
                                <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary" style="background: black;
                                                   color: white;
                                                   font-weight: 400;
                                                   padding: 13px 38px 13px 38px;
                                                   text-transform: none;
                                                   font-size: 14px;
                                                   border-radius: 0;">
                                    Send
                                </button>
                            </div>
                            <input type="hidden" asp-for="Token" value="@Model.Token" />
                            <input type="hidden" asp-for="UserId" value="@Model.UserId" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


