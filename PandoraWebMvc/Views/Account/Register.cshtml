@model RegisterVM
@{
    ViewData["Title"] = "Register";
}


<main>
      <div class="spacingSize" style="    margin-bottom: 11rem;"></div>
        <div class="text-danger" asp-validation-summary="All"></div>
          <div class="registerPass">
            <div class="registerPass__box">
              <h1 class="login__title">Qeydiyat</h1>
              <form method="post" asp-action="Register">
                <div class="setup__box-group">
                  <input asp-for="FirstName"
                    type="text"
                    class="setup__box-input"
                    id="name"
                    placeholder="Ad"
                  />
                  <label class="payBasketleftSide__placholder" for="name">
                    Ad
                  </label>
                </div>
                <div class="setup__box-group">
                  <input asp-for="LastName"
                    type="text"
                    class="setup__box-input"
                    placeholder="Soyad"
                    id="surname"
                  />
                  <label class="payBasketleftSide__placholder" for="surname">
                    Soyad
                  </label>
                </div>
                <div class="setup__box-group">
                  <input asp-for="Email"
                    id="email"
                    type="email"
                    class="setup__box-input"
                    placeholder="E-mail"
                  />
                  <label class="payBasketleftSide__placholder" for="email">
                    E-mail
                  </label>
                </div>
                <div style="border: 1px solid black; width: 100%;
                height: 45px;">
                  <div
                    class="setup__box-group"
                    style="display: flex;
                    justify-content: center;
                     align-items: center;
                     justify-content: space-between;
                     user-select: none;
                ">
                    <input asp-for="Password"
                      type="password"
                      class="password-input setup__box-input"
                      style="
                      padding-left: 20px;
                      outline: none;
                      padding-left: 9px;
                      display: flex;
                      align-items: center;
                      padding-top: 0.7rem;
                      box-shadow: none;
                      user-select: none;
                      height: 100%;
                     "
                      placeholder="Şifrə"
                      id="pass2"
                    />
                  <label class="payBasketleftSide__placholder" for="pass">
                    Şifrə
                  </label>
                        <span class="material-symbols-outlined visibility" style="margin-right: 1rem; margin-top: 9px;  cursor: default; user-select: none; color: gray;">
                            <i class="fa-solid fa-eye"></i>
                        </span>
                  </div>
                </div>
                <div style="border: 1px solid black; width: 100%; margin-top: 1rem;
                height: 45px;">
                  <div
                    class="setup__box-group"
                    style="display: flex;
                    justify-content: center;
                     align-items: center;
                     justify-content: space-between;
                     user-select: none;
                ">
                    <input asp-for="ConfirmPassword"
                      type="password"
                      class="password-input setup__box-input"
                      style="
                      padding-left: 20px;
                      outline: none;
                      padding-left: 9px;
                      display: flex;
                      align-items: center;
                      padding-top: 0.7rem;
                      box-shadow: none;
                      user-select: none;
                      height: 100%;
                     "
                      placeholder="Təsdiq Şifrə"
                      id="pass3"
                    />
                  <label class="payBasketleftSide__placholder" for="pass">
                    Təsdiq şifrə
                  </label>
                        <span class="material-symbols-outlined visibility" style="margin-right: 1rem; margin-top: 9px;  cursor: default; user-select: none; color: gray;">
                            <i class="fa-solid fa-eye"></i>
                        </span>
                  </div>
                </div>
                  <div class="register">
                    <div class="register-button" style="text-align: center;margin-bottom: 2rem;margin-top: 2rem;">
                        <button style="background: black;
                                                   color: white;
                                                   font-weight: 400;
                                                   padding: 13px 38px 13px 38px;
                                                   text-transform: none;
                                                   font-size: 14px;
                                                   border-radius: 0;" type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                            Register
                        </button>
                        </div>
                    </div>
               @* <input
                  class="submit setup__box-submit"
                  type="submit"
                  value="Daxil Olun"
                />*@
              </form>
              <a class="setup__box-register activeLogin"  asp-controller="Account" asp-action="Login"
                >Hesabim var</a>
            </div>
          </div>
    </main>